{
  "version": 3,
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "release",
      "inherits": "common",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug",
      "inherits": "common",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug-arm",
      "inherits": "debug",
      "binaryDir": "${sourceDir}/build/debug-arm",
      "toolchainFile": "${sourceDir}/raspi-toolchain.cmake"
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "debug-arm",
      "configurePreset": "debug-arm"
    }
  ]
}
